<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/wallpaper"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
		<ImageView android:id="@+id/minesweeper"
		    android:layout_width="200dp"
		    android:layout_height="wrap_content"
		    android:src="@drawable/minesweeper"
		    android:contentDescription="Titulo"/>
        <Button
            android:id="@+id/boton_juego_nuevo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onClick="seleccion"
            android:text="@string/boton_juego_nuevo" />

        <Button
            android:id="@+id/boton_instrucciones"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:onClick="seleccion"
            android:text="@string/boton_instrucciones" />
        
        <Button
            android:id="@+id/boton_ranking"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:onClick="seleccion"
            android:text="@string/boton_ranking" />

        <Button
            android:id="@+id/boton_salir"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:onClick="salir"
            android:text="@string/boton_salir" />

    </LinearLayout>

</RelativeLayout>