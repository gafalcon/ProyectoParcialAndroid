package com.codedazzle.buscaminas;

import android.os.Bundle;
import android.app.Activity;
import android.content.Intent;
import android.view.Menu;
import android.view.View;
import android.view.View.OnClickListener;
import android.app.AlertDialog;
import android.content.DialogInterface;

public class Minesweeper extends Activity implements OnClickListener
{
    @Override
    public void onCreate(Bundle savedInstanceState) 
    {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_minesweeper);
        
        View newGameButton = findViewById(R.id.new_game_button);
        newGameButton.setOnClickListener(this);
        
        View continueButton = findViewById(R.id.continue_game_button);
        continueButton.setOnClickListener(this);
        
        View highscoresButton = findViewById(R.id.high_scores_button);
        highscoresButton.setOnClickListener(this);
        
        View rulesButton = findViewById(R.id.rules_button);
        rulesButton.setOnClickListener(this);
        
        View exitButton = findViewById(R.id.exit_button);
        exitButton.setOnClickListener(this);
    }

    @Override
    public boolean onCreateOptionsMenu(Menu menu) 
    {
        getMenuInflater().inflate(R.menu.activity_minesweeper, menu);
        return true;
    }
    
    @Override
    public void onClick(View v) 
    {
      switch(v.getId())
      {
        case R.id.new_game_button:
          openNewGameDialog();
          break;
        case R.id.continue_game_button:
          break;
        case R.id.high_scores_button:
          break;
        case R.id.rules_button:
          Intent i = new Intent(this, Rules.class);
          startActivity(i);
          break;
        case R.id.exit_button:
          finish(); //end the application
          break;
      }
    }
    
    private void openNewGameDialog()
    {
      
    }
}



//Se necesita un titulo, por lo que en strings.xml definir una nueva cadena llamada difficulty_title. El constructor de diálogo tendrá un conjunto de los elementos que deben mostrarse en la ventana por lo que necesitamos para crear una matriz para mantener los niveles de dificultad, esto se puede hacer ya sea en el código java o como xml separado. Se puede crear un nuevo archivo llamado arrays.xml en res / valores,  aquí está el archivo arrays.xml



<Resources>
    <array name="difficulty">
        <item> @ string / easy_label </ item>
        <item> @ string / medium_label </ item>
        <item> @ string / hard_label </ item>
    </ Array>
</ Resources>
